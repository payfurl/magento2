    </virtualType>
    <virtualType name="PayfurlCheckoutPayToFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="string">payfurl_payto</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Payfurl\Payment\Block\OrderTransactionInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">PayfurlPaymentCheckoutPayToValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">PayfurlValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">PayfurlCommandPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlCheckoutShiftFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="string">payfurl_checkout_shift</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Payfurl\Payment\Block\OrderTransactionInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">PayfurlPaymentCheckoutShiftValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">PayfurlValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">PayfurlCommandPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlCheckoutPayByAccountFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="string">payfurl_checkout_pay_by_account</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Payfurl\Payment\Block\OrderTransactionInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">PayfurlPaymentCheckoutPayByAccountValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">PayfurlValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">PayfurlCommandPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlCheckoutUpiFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="string">payfurl_checkout_upi</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Payfurl\Payment\Block\OrderTransactionInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">PayfurlPaymentCheckoutUpiValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">PayfurlValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">PayfurlCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Virtual type for PayfurlValueHandlerPool  -->
    <virtualType name="PayfurlPaymentCardValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentCardConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCardConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentCardConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCardConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_card</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentPaypalValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentPaypalConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentPaypalConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentPaypalConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentPaypalConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_paypal</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentGooglePayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentGooglePayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentGooglePayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentGooglePayConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentGooglePayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_googlepay</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentCheckoutPayIdValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentCheckoutPayIdConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutPayIdConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentCheckoutPayIdConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutPayIdConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_checkout_azupay</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentCheckoutPayToValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentCheckoutPayToConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutPayToConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentCheckoutPayToConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutPayToConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_payto</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentCheckoutShiftValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentCheckoutShiftConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutShiftConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentCheckoutShiftConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutShiftConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_checkout_shift</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentCheckoutPayByAccountValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentCheckoutPayByAccountConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutPayByAccountConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentCheckoutPayByAccountConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutPayByAccountConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_checkout_pay_by_account</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlPaymentCheckoutUpiValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayfurlPaymentCheckoutUpiConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutUpiConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayfurlPaymentCheckoutUpiConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlPaymentCheckoutUpiConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">payfurl_checkout_upi</argument>
        </arguments>
    </virtualType>

    <!-- End virtual type for PayfurlValueHandlerPool  -->

    <virtualType name="PayfurlValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="basic" xsi:type="string">Payfurl\Payment\Gateway\Validator\BasicValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="capture" xsi:type="string">PayfurlCaptureCommand</item>
                <item name="refund" xsi:type="string">PayfurlRefundCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PayfurlCaptureRequest</argument>
            <argument name="transferFactory" xsi:type="object">Payfurl\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Payfurl\Payment\Gateway\Http\Client\TransactionCapture</argument>
            <argument name="handler" xsi:type="object">PaufurlCaptureHandler</argument>
            <argument name="validator" xsi:type="object">Payfurl\Payment\Gateway\Validator\GeneralResponseValidator</argument>
            <argument name="errorMessageMapper" xsi:type="object">Payfurl\Payment\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="customer" xsi:type="string">Payfurl\Payment\Gateway\Request\CustomerDataBuilder</item>
                <item name="payment" xsi:type="string">Payfurl\Payment\Gateway\Request\PaymentDataBuilder</item>
                <item name="address" xsi:type="string">Payfurl\Payment\Gateway\Request\AddressDataBuilder</item>
                <item name="order" xsi:type="string">Payfurl\Payment\Gateway\Request\OrderDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PaufurlCaptureHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment_details" xsi:type="string">Payfurl\Payment\Gateway\Response\PaymentDataHandler</item>
                <item name="txn_id" xsi:type="string">Payfurl\Payment\Gateway\Response\TransactionDataHandler</item>
                <item name="additional_data" xsi:type="string">Payfurl\Payment\Gateway\Response\AdditionalDataHandler</item>
                <item name="payfurl_customer_id" xsi:type="string">Payfurl\Payment\Gateway\Response\CustomerDataHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PayfurlRefundRequest</argument>
            <argument name="transferFactory" xsi:type="object">Payfurl\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Payfurl\Payment\Gateway\Http\Client\TransactionRefund</argument>
            <argument name="handler" xsi:type="object">PaufurlRefundHandler</argument>
            <argument name="validator" xsi:type="object">Payfurl\Payment\Gateway\Validator\GeneralResponseValidator</argument>
            <argument name="errorMessageMapper" xsi:type="object">Payfurl\Payment\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayfurlRefundRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="refundData" xsi:type="string">Payfurl\Payment\Gateway\Request\RefundDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PaufurlRefundHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="refund_transaction_details" xsi:type="string">Payfurl\Payment\Gateway\Response\RefundHandler</item>
                <item name="refund_additional_data" xsi:type="string">RefundAdditionalDataHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="RefundAdditionalDataHandler" type="Payfurl\Payment\Gateway\Response\AdditionalDataHandler">
        <arguments>
            <argument name="transactionType" xsi:type="string">refund</argument>
        </arguments>
    </virtualType>

    <type name="Payfurl\Payment\Gateway\Http\Client\TransactionCapture">
        <arguments>
            <argument name="customLogger" xsi:type="object">PayfurlLogger</argument>
        </arguments>
    </type>
    <type name="Payfurl\Payment\Gateway\Http\Client\TransactionRefund">
        <arguments>
            <argument name="customLogger" xsi:type="object">PayfurlLogger</argument>
        </arguments>
    </type>
    <type name="Payfurl\Payment\Gateway\Request\PaymentDataBuilder">
        <arguments>
            <argument name="customLogger" xsi:type="object">PayfurlLogger</argument>
        </arguments>
    </type>

    <!-- Logger, initialized with PayfurlConfig -->
    <virtualType name="PayfurlLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">Payfurl\Payment\Model\Config</argument>
            <argument name="logger" xsi:type="object">PayfurlVirtualLogger</argument>
        </arguments>
    </virtualType>

    <type name="Payfurl\Payment\Model\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Payfurl\Payment\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </type>

    <virtualType name="PayfurlVirtualDebug" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/payfurl.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="PayfurlVirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">PayfurlVirtualDebug</item>
            </argument>
        </arguments>
    </virtualType>
    <!--End virtual type for logger-->

    <!-- Virtual type for errorMessageMapper  -->
    <virtualType name="Payfurl\Payment\Gateway\ErrorMapper\VirtualErrorMessageMapper" type="Magento\Payment\Gateway\ErrorMapper\ErrorMessageMapper">
        <arguments>
            <argument name="messageMapping" xsi:type="object">Payfurl\Payment\Gateway\ErrorMapper\VirtualMappingData</argument>
        </arguments>
    </virtualType>
    <virtualType name="Payfurl\Payment\Gateway\ErrorMapper\VirtualMappingData" type="Magento\Payment\Gateway\ErrorMapper\MappingData">
        <arguments>
            <argument name="reader" xsi:type="object">Payfurl\Payment\Gateway\ErrorMapper\VirtualConfigReader</argument>
            <argument name="cacheId" xsi:type="string">payfurl_error_mapper</argument>
        </arguments>
    </virtualType>
    <virtualType name="Payfurl\Payment\Gateway\ErrorMapper\VirtualConfigReader" type="Magento\Payment\Gateway\ErrorMapper\VirtualConfigReader">
        <arguments>
            <!-- etc/payfurl_error_mapping.xml  -->
            <argument name="fileName" xsi:type="string">payfurl_error_mapping.xml</argument>
        </arguments>
    </virtualType>
    <!-- End virtual type for errorMessageMapper  -->

    <preference for="Magento\Payment\Gateway\Data\Order\OrderAdapter" type="Payfurl\Payment\Gateway\Data\OrderAdapter"/>
</config>
